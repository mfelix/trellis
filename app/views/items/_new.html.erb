<h1>New item</h1>

<% form_for @item, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag :parent_id, params[:parent] %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :audio %><br />
    <%= f.file_field :audio %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <!-- <p>
    <label>tumblr audio attach</label><br />
    <%= f.text_field :audio_attachment_embed %>
  </p> -->
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>