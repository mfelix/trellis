
<div class="tile <%= tile_sizer item %>" style="background-image: url(<%= item.image ? item.image.url : '' %>)">
<a class="linker" href="<%= item_path(item) %>">  
  <div class="top">
  <h2><%= item.title %></h2>
    <% if current_user %>
    <div class="action">
      <%= link_to 'Edit', edit_item_path(item), :class => "edit" %>
      <%= link_to '', item, :confirm => 'Are you sure?', :method => :delete, :class => "delete" %>
      <!-- <%= link_to '+ New', new_item_path %>  -->
    </div>
    <% end %>
  <div class="clear"></div>
  </div>

  <div class="interior">
    <div class="content">
      <%= render :partial => "items/microtile", :collection => item.children %>  
      <%= item.audio_attachment_embed ? item.audio_attachment_embed : '' %>
    </div>
  </div>
  </a>
</div>
