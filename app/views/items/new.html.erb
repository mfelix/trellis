<h1>New item</h1>

<% form_for @item, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag :parent_id, params[:parent] %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :file %><br />
    <%= f.file_field :file %>
  </p>

  <p>
    <%= f.label :parent %><br />
    <%= @collections[0].title %>
    <%= select_tag "payment" %>
    <option>pizza</option>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>
